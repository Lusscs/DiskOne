<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardcard"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCard1"
            android:layout_width="148dp"
            android:layout_height="142dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageCard3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_timer_24"
            app:layout_constraintStart_toEndOf="@+id/imageCard1"
            app:layout_constraintTop_toBottomOf="@+id/titleCard" />

        <ImageView
            android:id="@+id/imageCard"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_people_alt_24"
            app:layout_constraintStart_toEndOf="@+id/imageCard1"
            app:layout_constraintTop_toBottomOf="@+id/imageCard3" />

        <ImageView
            android:id="@+id/imageCard4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_baseline_straighten_24"
            app:layout_constraintStart_toEndOf="@+id/imageCard1"
            app:layout_constraintTop_toBottomOf="@+id/imageCard" />

        <TextView
            android:id="@+id/titleCard"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Titulo"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageCard1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/preparationTime"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="Tempo de preparo"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageCard3"
            app:layout_constraintTop_toBottomOf="@+id/titleCard" />

        <TextView
            android:id="@+id/kcal"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Kcal por porção"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/imageCard4"
            app:layout_constraintTop_toBottomOf="@+id/numeroPorcoes" />

        <TextView
            android:id="@+id/numeroPorcoes"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Numero de porções"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageCard"
            app:layout_constraintTop_toBottomOf="@+id/preparationTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>